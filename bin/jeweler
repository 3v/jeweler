#!/usr/bin/env ruby
require 'rubygems'

$:.unshift File.join(File.dirname(__FILE__), '..', 'lib')
require 'jeweler'

unless ARGV.size == 1
  puts "jeweler takes 1 argument: The repo to be created Example: jeweler the-perfect-gem"
  exit 1
end

github_repo_name = ARGV.first
generator = Jeweler::Generator.new github_repo_name
generator.run
