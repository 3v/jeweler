require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "<%= github_repo_name %>"
    gem.summary = %Q{<%= summary %>}
    gem.email = "<%= user_email %>"
    gem.homepage = "<%= github_url %>"
    gem.description = "TODO"
    gem.authors = ["<%= user_name %>"]
  end
rescue LoadError
  puts "Jeweler not available. Install it with: sudo gem install technicalpickles-jeweler -s http://gems.github.com"
end

require 'rake/rdoctask'
Rake::RDocTask.new do |rdoc|
  rdoc.rdoc_dir = 'rdoc'
  rdoc.title = '<%= github_repo_name %>'
  rdoc.options << '--line-numbers' << '--inline-source'
  rdoc.rdoc_files.include('README*')
  rdoc.rdoc_files.include('lib/**/*.rb')
end

<% if testing_framework.to_sym == :rspec %>
require 'spec/rake/spectask'
Spec::Rake::SpecTask.new(:spec) do |t|
  t.libs << 'lib' << 'spec'
  t.spec_files = FileList['spec/**/*_spec.rb']
end
<% else %>
require 'rake/testtask'
Rake::TestTask.new(:<%= test_or_spec %>) do |t|
  t.libs << 'lib' << '<%= test_or_spec %>'
  t.pattern = '<%= test_or_spec %>/**/*_<%= test_or_spec %>.rb'
  t.verbose = false
end
<% end %>

<% if testing_framework.to_sym == :rspec %>
Spec::Rake::SpecTask.new(:rcov) do |t|
  t.libs << 'lib' << 'spec'
  t.spec_files = FileList['spec/**/*_spec.rb']
  t.rcov = true
end
<% else %>
begin
  require 'rcov/rcovtask'
  Rcov::RcovTask.new do |t|
    t.libs << '<%= test_or_spec %>'
    t.test_files = FileList['<%= test_or_spec %>/**/*_<%= test_or_spec %>.rb']
    t.verbose = true
  end
rescue LoadError
  puts "RCov is not available. In order to run rcov, you must: sudo gem install spicycode-rcov"
end
<% end %>

begin
  require 'cucumber/rake/task'
  Cucumber::Rake::Task.new(:features)
rescue LoadError
  puts "Cucumber is not available. In order to run features, you must: sudo gem install cucumber"
end

<% if testing_framework.to_sym == :rspec %>
task :default => :spec
<% else %>
task :default => :test
<% end %>
